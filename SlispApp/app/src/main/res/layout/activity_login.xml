<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".Login">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="348dp"
        android:layout_height="52dp"
        android:text="@string/login_here"
        android:textAlignment="center"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"

        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="201dp" />

    <ImageView
        android:layout_width="156dp"
        android:layout_height="123dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/user_login_icon"
        android:contentDescription="@string/userIcon"
        android:padding="30dp" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:gravity="left"
            android:hint="Enter Username (Saamu Elinnya Lyo)"
            android:inputType="textPersonName"
            android:textSize="20sp"
            tools:ignore="MissingConstraints,RtlHardcoded"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="201dp"
            tools:targetApi="o" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:gravity="left"
            android:hint="Enter Password (Saamu Pasiwadi)"
            android:inputType="textPassword"
            android:textSize="20sp"
            tools:ignore="MissingConstraints,RtlHardcoded"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="201dp"
            tools:targetApi="o" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:gravity="center"
        android:text="LOGIN"
        android:backgroundTint="#FF9800"
        android:textSize="30sp"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="600dp" />

    <TextView
        android:id="@+id/register_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textColor="#6B60F8  "
        android:text="New User? Register Now. \n(Olimupya? Wewandiise Kati)"
        android:textAlignment="center"/>


</LinearLayout>